<tr id="<%= user.screen_name %>" class="">
  <td> <img style="width:32px;" src="<%= user.profile_image_url %>"></img> </td>

  <td>
    <a href="http://www.twitter.com/<%= user.screen_name %>"><%= user.screen_name %></a>
    <br />
    (<%= user.name %>)
    <br /> <br />

    <% if user.verified? %>
      <br />
      <span class="label notice">verified</span>
    <% end %>
  </td>

  <td> <%= user.description %> </td>
  <td> <%= user.status.text unless user.status == nil %> </td>

	<td id="<%= "button-" + user.screen_name %>">
    <% if user.following %>
			<%= render partial: "unfollow_button", object: user, as: :user %>
    <% else %>
			<%= render partial: "follow_button", object: user, as: :user %>
    <% end %>
  </td>
</tr>
