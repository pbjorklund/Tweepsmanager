<tr class="">
  <td> <img style="width:32px;" src="<%= user.image_url %>"></img> </td>

  <td>
    <a href="http://www.twitter.com/<%= user.nickname %>"><%= user.nickname %></a>
    <br />
    (<%= user.name %>)
    <br /> <br />

    <% # if user.verified? %>
      <br />
      <span class="label notice">verified</span>
    <% # end %>
  </td>

  <td> <%= user.bio %> </td>
  <td> <%= user.last_tweet %> </td>

  <td>
		<!-- #TODO Find out if this is ok -->
    <% if current_user.following?(user) %>
      <%= button_to "Unfollow", { action: "unfollow", id: user.nickname }, method: :delete, class:"btn small danger" %>
    <% else %>
      <%= button_to "Follow", { action: "follow", id: user.nickname }, method: :post, class:"btn small primary" %>
    <% end %>
  </td>
</tr>
